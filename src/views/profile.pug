html
  head
    link(rel='stylesheet' href='/stylesheets/main.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU' crossorigin='anonymous')
  body
    .container.height-100.d-flex.justify-content-center.align-items-center
      .card.text-center
        .py-4.p-2
          div
            img.rounded(src='https://i.imgur.com/EnANUqj.jpg' width='100')
          .mt-3.d-flex.flex-row.justify-content-center
            h5 #{name}
            span.dots
              i.fa.fa-check
          span Location: #{location}
          .mt-3
            button.btn.btn-danger Follow
            |
            button.btn.btn-outline-secondary
              i.fa.fa-users
              |  #{followerCount}
        div
          ul.list-unstyled.list
            li
              span.font-weight-bold Photos
              div
                span.mr-1 #{photoCount}
                |
                i.fa.fa-angle-right
            li
              span.font-weight-bold Comments
              div
                span.mr-1 #{commentCount}
                |
                i.fa.fa-angle-right
            li
              span.font-weight-bold Reviews
              div
                span.mr-1 #{reviewCount}
                |
                i.fa.fa-angle-right
